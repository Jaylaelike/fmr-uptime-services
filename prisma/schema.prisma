// This is your Prisma schema file
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String         @unique
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  monitors      Monitor[]
  notifications Notification[]
}

model Monitor {
  id           String         @id @default(cuid())
  name         String
  url          String
  interval     Int            @default(60) // in seconds
  timeout      Int            @default(30) // in seconds
  isActive     Boolean        @default(true)
  lastCheck    DateTime?
  status       Status         @default(UP)
  userId       String
  user         User           @relation(fields: [userId], references: [id])
  events       Event[]
  webhook      Webhook?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  notifications Notification[]
}

model Event {
  id        String   @id @default(cuid())
  status    Status
  monitorId String
  monitor   Monitor  @relation(fields: [monitorId], references: [id])
  createdAt DateTime @default(now())
}

model Webhook {
  id        String   @id @default(cuid())
  url       String
  monitorId String   @unique
  monitor   Monitor  @relation(fields: [monitorId], references: [id])
  message   Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  message   String
  status    Status
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  monitorId String
  monitor   Monitor  @relation(fields: [monitorId], references: [id])
  sent      Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum Status {
  UP
  DOWN
}